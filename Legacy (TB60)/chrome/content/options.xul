<?xml version="1.0"?>
<?xml-stylesheet href="chrome://global/skin" type="text/css"?>
<?xml-stylesheet href="chrome://messenger/skin/preferences/preferences.css" type="text/css"?>

<prefwindow id="iraniandate-options" title="Iranian Date Options"
	xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

	<prefpane id="options-pane" label="Date Format Settings">

		<preferences>
			<preference id="pref-yearStyle" name="extensions.iraniandate.yearStyle" type="string" />
			<preference id="pref-monthStyle" name="extensions.iraniandate.monthStyle" type="string" />
			<preference id="pref-dayStyle" name="extensions.iraniandate.dayStyle" type="string" />
			<preference id="pref-weekDayStyle" name="extensions.iraniandate.weekDayStyle" type="string" />
			<preference id="pref-timeStyle" name="extensions.iraniandate.timeStyle" type="string" />
		</preferences>

		<vbox align="start">

			<hbox>
				<label control="year-style" value="Year Style: " />
				<menulist preference="pref-yearStyle" id="year-style">
					<menupopup>
						<menuitem label="do not show" value="" />
						<menuitem label="short" value="2-digit" />
						<menuitem label="long" value="numeric" />
					</menupopup>
				</menulist>
			</hbox>

			<hbox>
				<label control="month-style" value="Month Style: " />
				<menulist preference="pref-monthStyle" id="month-style">
					<menupopup>
						<menuitem label="do not show" value="" />
						<menuitem label="digits" value="numeric" />
						<menuitem label="name" value="short" />
					</menupopup>
				</menulist>
			</hbox>

			<hbox>
				<label control="day-style" value="Day Style: " />
				<menulist preference="pref-dayStyle" id="day-style">
					<menupopup>
						<menuitem label="do not show" value="" />
						<menuitem label="short" value="numeric" />
						<menuitem label="long" value="2-digit" />
					</menupopup>
				</menulist>
			</hbox>

			<hbox>
				<label control="week-style" value="Week Style: " />
				<menulist preference="pref-weekDayStyle" id="week-style">
					<menupopup>
						<menuitem label="do not show" value="" />
						<menuitem label="short" value="short" />
						<menuitem label="long" value="long" />
						<menuitem label="narrow" value="narrow" />
					</menupopup>
				</menulist>
			</hbox>

			<hbox>
				<label control="time-style" value="Time Style: " />
				<menulist preference="pref-timeStyle" id="time-style">
					<menupopup>
						<menuitem label="do not show" value="" />
						<menuitem label="12-hour" value="12-hour" />
						<menuitem label="24-hour" value="24-hour" />
					</menupopup>
				</menulist>
			</hbox>

		</vbox>

	</prefpane>

</prefwindow>